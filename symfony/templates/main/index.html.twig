{% extends 'base.html.twig' %}

{% block title %}Main{% endblock %}

{% block body %}
    <h5>You are connected as {{ username }}</h5>
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-dashboard-tab" data-toggle="pill" href="#pills-dashboard" role="tab"
               aria-controls="pills-dashboard" aria-selected="true">Dashboard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-importer-tab" data-toggle="pill" href="#pills-importer" role="tab"
               aria-controls="pills-importer" aria-selected="false">Importer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-backtest-tab" data-toggle="pill" href="#pills-backtest" role="tab"
               aria-controls="pills-backtest" aria-selected="false">Backtest</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-strategies-tab" data-toggle="pill" href="#pills-strategies" role="tab"
               aria-controls="pills-strategies" aria-selected="false">Strategies</a>
        </li>
    </ul>
    <div class="tab-content" id="nav-main">
        <div class="tab-pane fade show active" id="pills-dashboard" role="tabpanel"
             aria-labelledby="pills-dashboard-tab">{{ include('main/pages/dashboard.html.twig') }}</div>
        <div class="tab-pane fade" id="pills-importer" role="tabpanel"
             aria-labelledby="pills-importer-tab">{{ include('main/pages/importer.html.twig') }}</div>
        <div class="tab-pane fade" id="pills-backtest" role="tabpanel"
             aria-labelledby="pills-backtest-tab">{{ include('main/pages/backtest.html.twig') }}</div>
        <div class="tab-pane fade" id="pills-strategies" role="tabpanel"
             aria-labelledby="pills-strategies-tab">{{ include('main/pages/strategies.html.twig') }}</div>
    </div>
{% endblock %}
